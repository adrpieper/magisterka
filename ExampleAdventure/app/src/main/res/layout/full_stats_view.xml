<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="stats" type="pl.edu.ug.inf.am.game.state.PlayerStatsState"/>
    </data>
    <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{"strength : " + stats.basic.strength + "+" + stats.bonus.strength }' />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{"intelligence : " + stats.basic.intelligence + "+" + stats.bonus.strength}' />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{"agility : " + stats.basic.agility + "+" + stats.bonus.strength}' />
    </LinearLayout>
</layout>


