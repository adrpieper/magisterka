<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bind="http://schemas.android.com/apk/res-auto"
        tools:context=".game.view.GameActivity">
    <data>
        <variable name="player" type="pl.edu.ug.inf.am.player.state.PlayerState"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{"hp"+player.hp.value}'
            android:id="@+id/hpTextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{"level"+player.level}'
            android:id="@+id/powerTextView"
            android:layout_below="@+id/hpTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <include
                android:id="@+id/stats_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/stats_view"
                bind:stats='@{player.stats}'
                android:layout_below="@+id/powerTextView" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        <fragment android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:name="pl.edu.ug.inf.am.trip.view.SkillsFragment"
                  android:id="@+id/skills_fragment"
                  tools:layout="@android:layout/list_content" android:layout_below="@+id/stats_view"
                  android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

    </RelativeLayout>
</layout>
